<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.GameCode"
          stylesheets="/sample/sample.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Button GridPane.rowIndex ="4" text="Red" GridPane.columnIndex="1" onAction="#increment"/>
    <Button GridPane.rowIndex = "4" GridPane.columnIndex="2" text="blue" />
    <Button GridPane.rowIndex = "4" GridPane.columnIndex="3" text="yellow" />
    <Button GridPane.rowIndex = "4" GridPane.columnIndex="4" text="green" />

    <Label GridPane.rowIndex="2" fx:id="score"/>
</GridPane>
